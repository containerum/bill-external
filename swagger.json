      "post": {
        "tags": [
          "Subscription"
        ],
        "summary": "Subscribe user to tariff whenever he adds a namespace or volume.",
        "operationId": "SubscribeTariff",
        "parameters": [
          {
            "name": "body",
            "in": "body",
            "required": true,
            "schema": {
